{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <section style="max-width: 600px; margin: 0 auto; padding: 20px;">
        <h1>Réinitialiser votre mot de passe</h1>

        {# Messages flash éventuels #}
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endfor %}

        <p>
            Veuillez saisir un nouveau mot de passe et le confirmer ci-dessous.
        </p>

        {{ form_start(passForm) }}
        {{ form_row(passForm.password.first, {'label': 'Nouveau mot de passe'}) }}
        {{ form_row(passForm.password.second, {'label': 'Confirmez le mot de passe'}) }}

        <button type="submit" class="btn btn-success w-100">Mettre à jour mon mot de passe</button>
        {{ form_end(passForm) }}
    </section>
{% endblock %}
